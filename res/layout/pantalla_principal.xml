<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/pantalla1"
    tools:context=".PantallaInicial" >
    
	<ImageButton
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/infoButtonDescription"
        android:onClick="onClick"
        android:src="@drawable/action_about" />

    <Button
        android:id="@+id/capitalesButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/orientacionButton"
        android:onClick="onClick"
        android:text="@string/capitalesButton" />

    <Button
        android:id="@+id/orientacionButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/infoButton"
        android:layout_marginTop="120dp"
        android:onClick="onClick"
        android:text="@string/orientacionButton"
        android:color="#38B5E5" />
   
</RelativeLayout>